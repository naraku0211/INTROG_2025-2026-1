@model IEnumerable<PartyInvites.Models.GuestInvite>
@{
    Layout = null;
}

<!Doctype html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Responses</title>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </head>

    <body>
        <div class="text-center p-2">
            <h2 class="text-center">Here are the list of people who will attend the party</h2>
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PartyInvites.Models.GuestInvite r in Model!)
                    {
                        <tr>
                            <td>@r.Name</td>
                            <td>@r.Email</td>
                            <td>@r.Phone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </body>
</html>

